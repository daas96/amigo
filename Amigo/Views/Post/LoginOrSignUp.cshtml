@model Amigo.Models.users
@{
    ViewBag.Title = "LoginOrSignUp";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Sign In</h3>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="row">
                    <div class="col-md-10">
                        @ViewBag.Message
                    </div>
                </div>
            }
        </div>
        <div class="form-group col-centered">
            <div class="row col-centered">
                <label class="control-label col-md-4">Email :</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row col-centered">
                <div class="control-label col-md-4">Password :</div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Log In" class="btn btn-default col-centered" />
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-5 col-centered">
                <h3> If you haven't got an account yet</h3>
                <p><a class="btn btn-default" href="@Url.Action("SignUp", "Post")">Sign Up now</a></p>
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

