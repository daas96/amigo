@model Amigo.Models.users
@{
    ViewBag.Title = "LoginOrSignUp";
}

<div class="row">
    <div class="col-md-5 col-centered">
        <h2 class="text-center">Login</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Message != null)
        {
            <div class="form-group">
                <div class="col-md-10">
                    @ViewBag.Message
                </div>
            </div>
        }
        <div class="form-group">
            <label class = "control-label col-md-2">Email :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="control-label col-md-2">Password :</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5 col-centered">
                <input type="submit" value="Log In" class="btn btn-default col-centered" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-centered">
        <h3> If you haven't got an account yet</h3>
        <p><a class="btn btn-default" href="@Url.Action("SignUp","Post")">Sign Up now</a></p>
    </div>
</div>

