@model Amigo.Models.travel

@{
    ViewBag.Title = "Post";
}

<h2>Post a trip</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (ViewBag.Message != null)
        {
            <div class="row">
                <div class="col-md-10">
                    @ViewBag.Message
                </div>
            </div>
        }

        <div class="form-group">
            <label class = "control-label col-md-2"> Departing from :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.departure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.departure, "", new { @class = "text-danger" })
            </div>
        </div>
            
        <div class="form-group">
            <label class="control-label col-md-2"> Arriving at :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.arrival, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.arrival, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Date of departure :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Time of departure :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Contribution requested to each passenger :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.departure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.departure, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Create" class="btn btn-default"/>
        </div>
    </div>
}


