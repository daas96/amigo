@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Bonjour " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></li>
    </ul>
    }
}
@if (Session["SessionID"] != null)
{ <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign out", "Logout", "Inscription", routeValues: null, htmlAttributes: new { id = "logoutLink" })</li>
        <li>@Html.ActionLink("Profil", "Detail", "Profil", routeValues: null, htmlAttributes: new { id = "ProfilLink" })</li>
    </ul>
}
else
{
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Sign up", "Register", "Inscription", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Sign in", "Login", "Inscription", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
        }
